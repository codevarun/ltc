<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="ltc_blog.search.provider" class="FOQ\ElasticaBundle\Provider\DoctrineProvider" public="false">
            <tag name="foq_elastica.provider" />
            <argument type="service" id="foq_elastica.index.doc.blog" />
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument>Ltc\BlogBundle\Document\BlogEntry</argument>
        </service>

    </services>

</container>
