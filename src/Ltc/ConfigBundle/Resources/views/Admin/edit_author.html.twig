{% extends "LtcConfigBundle:Admin:form.html.twig" %}

{% block form_fields %}
<div>
    {{ form_label(form.title, "Nom") }}
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
</div>
<section>
    {% if document.hasImage %}
        <img class="image_thumb" src="{{ asset(document.image.path|apply_filter("admin_medium")) }}" />
    {% endif %}
    <div class="image_form">
        Photo de l'auteur.
        <div>
            {{ form_widget(form.image.file) }}
            {{ form_errors(form.image) }}
        </div>
        <div>
            {{ form_label(form.image.legend, "Legende") }}
            {{ form_widget(form.image.legend) }}
        </div>
    </div>
</section>
<div>
    {{ form_label(form.summary, "Resume") }}
    <div class="help">Restons simple, ici. Evite les titres et les listes</div>
    {{ form_widget(form.summary, {"rows": 15}) }}
</div>
<div class="with_image with_file">
    {{ form_label(form.body, "Texte") }}
    <div class="help">Les images inserees ici ne seront pas redimensionnees.</div>
    {{ form_widget(form.body, {"rows": 40}) }}
</div>
<div class="with_image with_file">
    {{ form_label(form.publications, "Publications") }}
    <div class="help">Les images inserees ici ne seront pas redimensionnees.</div>
    {{ form_widget(form.publications, {"rows": 30}) }}
</div>
{% endblock %}
