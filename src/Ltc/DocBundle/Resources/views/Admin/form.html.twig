{% extends "LtcAdminBundle::form.html.twig" %}

{% block form_fields %}
<div>
    {{ form_label(form.title, "Titre") }}
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
</div>
<div class="inline_label">
    {{ form_widget(form.isPublished) }}
    {{ form_label(form.isPublished, "Visible sur le site") }}
</div>
{% if form.category is defined %}
<div>
    {{ form_label(form.category, "Deplacer vers") }}
    {{ form_widget(form.category) }}
</div>
{% endif %}
<section>
    {% if doc.hasImage %}
        <img class="image_thumb" src="{{ asset(doc.image|ltc_file|apply_filter("admin_medium")) }}" />
    {% endif %}
    <div class="image_form">
        Image de l'article.
        <div>
            {{ form_widget(form.image.uploadedFile) }}
            {{ form_errors(form.image.uploadedFile) }}
        </div>
        <div>
            {{ form_label(form.image.legend, "Legende") }}
            {{ form_widget(form.image.legend) }}
        </div>
    </div>
</section>
<div>
    {{ form_label(form.summary, "Resume") }}
    <div class="help">Restons simple, ici. Evite les titres et les listes</div>
    {{ form_widget(form.summary, {"attr": {"rows": 15}}) }}
</div>
<div class="with_image with_file">
    {{ form_label(form.body, "Texte") }}
    <div class="help">Les images inserees ici ne seront pas redimensionnees.</div>
    {{ form_widget(form.body, {"attr": {"rows": 40}}) }}
</div>
<div>
    {{ form_label(form.tags, "Tags") }}
    {% include "LtcTagBundle:Admin:widget.html.twig" %}
</div>
<div class="with_file">
    {{ form_label(form.reference, "Reference") }}
    {{ form_widget(form.reference, {"attr": {"rows": 5}}) }}
</div>
<div class="with_file">
    {{ form_label(form.relatedPublications, "Publications liees") }}
    {{ form_widget(form.relatedPublications, {"attr": {"rows": 5}}) }}
</div>
<section>
    Uniquement en cas d'un auteur invite.
    <div>
        {{ form_label(form.authorName, "Auteur") }}
        {{ form_widget(form.authorName) }}
    </div>
    <div>
        {{ form_label(form.authorBio, "Qualite") }}
        {{ form_widget(form.authorBio) }}
    </div>
</section>
{% if form.publicationDate is defined %}
<div>
    {{ form_label(form.publicationDate, "Date de publication") }}
    {{ form_widget(form.publicationDate) }}
</div>
{% endif %}
<div class="with_file">
    {{ form_label(form.readMore, "Lire la suite") }}
    {{ form_widget(form.readMore, {"attr": {"rows": 7}}) }}
</div>
{% endblock %}
