<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="ltc_core.search_finder" class="Ltc\CoreBundle\Search\Finder">
            <argument type="service" id="foq_elastica.index.doc" />
            <argument type="service" id="ltc_core.search_mapper.doc" />
        </service>

        <service id="ltc_core.search_mapper.doc" class="Ltc\CoreBundle\Search\DocMapper" public="false">
            <argument type="service" id="ltc_blog.repository.blog_entry" />
            <argument type="service" id="ltc_article.repository.article" />
        </service>

    </services>

</container>
