{% extends "LtcConfigBundle:Admin:form.html.twig" %}

{% block form_fields %}
{{ form_row(form.title) }}
{{ form_row(form.url) }}
<fieldset>
    {% if document.hasImage %}
        <img class="image_thumb" src="{{ asset(document.image|ltc_file|apply_filter("admin_medium")) }}" />
    {% endif %}
    <legend>Image :</legend>
    {{ form_row(form.image.uploadedFile) }}
    {{ form_row(form.image.legend) }}
</fieldset>
{% endblock %}
