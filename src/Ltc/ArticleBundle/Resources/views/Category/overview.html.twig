{# reorder for 2-columns display #}

<div class="row">
<div class="sixcol category_column">
{% for category in categories %}
    {% set url = path("ltc_article_category_view", {"slug": category["category"].slug}) %}
    <div>
        <h2 class="title"><a href="{{ url }}">{{ category["category"].title }}</a></h2>
        {% include "LtcArticleBundle:Article:smallList.html.twig" with {"docs": category["articles"] } %}
        <a class="all_others" href="{{ url }}">&gt; autres articles</a>
    </div>
    {% if loop.index == 2 %}
    </div></div>
    <div class="row">
    <div class="sixcol category_column">
    {% else %}
    </div><div class="sixcol last category_column">
    {% endif %}
{% endfor %}
</div>
</div>
