<div class="actions">
    <a href="{{ path("ltc_article_admin_article_new", {"categorySlug": category.slug}) }}">Nouveau</a>
</div>
<h1>{{ articles|length }} {{ category.title }}</h1>
<table>
    {% for tag in ['thead', 'tfoot'] %}
    <{{ tag }}>
        <tr>
            <th>Titre</th>
            <th>Visible</th>
            <th>Creation</th>
        </tr>
    </{{ tag }}>
    {% endfor %}
    <tbody>
    {% for article in articles %}
        <tr>
            <td><a href="{{ path("ltc_article_admin_article_edit", {"categorySlug": article.category.slug, "slug": article.slug}) }}">{{ article.title }}</a></td>
            <td>{{ article.isPublished ? "&#9679;" : "" }}</td>
            <td>{{ article.createdAt|date }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
