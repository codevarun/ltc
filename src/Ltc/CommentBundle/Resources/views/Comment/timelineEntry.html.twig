{% extends "Lichess:Timeline:entry.twig.html" %}

{% block author %}{% include "Lichess:Timeline:author.twig.html" with {"author": comment.author|default(comment.authorName)} %}{% endblock %}
{% block verb %}commented{% endblock %}
{% block subject_name %}Game {{ game_id }}{% endblock %}
{% block subject_url %}{{ path("lichess_game", {"id": game_id}) }}{% endblock %}
{% block view_name %}Comment{% endblock %}
{% block view_url %}{{ path("lichess_game", {"id": game_id}) }}#{{ comment.id }}{% endblock %}
{% block date %}{{ comment.createdAt|date }}{% endblock %}
