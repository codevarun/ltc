<article class="doc_preview doc_preview_with_metas clearfix">
    <header>
        <div class="metas">
            <p class="metadata meta_block">{{ ltc_doc_publication_date_and_author(doc, "<br />") }}</p>
            {#
            <div class="nice_list small">
                <span class="title shy">Tags</span>
                {% include "LtcTagBundle:Tag:list.html.twig" with {"tags": doc.tags} %}
            </div>
            #}
        </div>
        <h2><a href="{{ block("url") }}">{{ doc.title }}</a></h2>
    </header>
    {% if doc.hasImage %}
    <div class="doc_image">
        <img src="{{ asset(doc.image.path|apply_filter("preview")) }}" />
        {% if doc.image.legend %}
        <p class="legend overflowed">{{ doc.image.legend|ltc_shrink_link|raw }}</p>
        {% endif %}
    </div>
    {% endif %}
    {{ doc.summary|markdown }}
    <a class="more" href="{{ block("url") }}">Lire la suite</a>
</article>
