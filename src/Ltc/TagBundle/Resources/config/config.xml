<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ltc_tag.denormalizer" class="Ltc\TagBundle\Denormalizer">
            <argument type="service" id="ltc_article.repository.article" />
            <argument type="service" id="ltc_blog.repository.blog_entry" />
            <argument type="service" id="ltc_tag.repository.tag" />
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>

        <service id="ltc_tag.twig.extension" class="Ltc\TagBundle\Twig\TagExtension" public="false">
            <tag name="twig.extension" />
        </service>

        <service id="ltc_tag.form_type.tags" class="Ltc\TagBundle\Form\TextareaTagsType">
            <argument type="service" id="ltc_tag.repository.tag" />
            <tag name="form.type" alias="ltc_tags" />
        </service>
    </services>

</container>
