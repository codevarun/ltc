{% extends "LtcAdminBundle::form.html.twig" %}

{% block form_fields %}
<fieldset>
    {{ form_row(form.title) }}
    {{ form_row(form.isPublished) }}
    {% if form.category is defined %}
    {{ form_row(form.category) }}
    {% endif %}
</fieldset>
<fieldset>
    {% if doc.hasImage %}
        <img class="image_thumb" src="{{ asset(doc.image|ltc_file|apply_filter("admin_medium")) }}" />
    {% endif %}
    <legend>Image principale :</legend>
    {{ form_row(form.image.uploadedFile) }}
    {{ form_row(form.image.legend) }}
</fieldset>
<fieldset>
    <legend>Textes :</legend>
    <div class="clearfix">
        {{ form_label(form.summary) }}
        <div class="input">
            {{ form_widget(form.summary, {"attr": {"rows": 10}}) }}
            {{ form_errors(form.summary) }}
        </div>
    </div>
    <div class="clearfix with_image with_file">
        {{ form_label(form.body) }}
        <div class="input">
            {{ form_widget(form.body, {"attr": {"rows": 22}}) }}
            {{ form_errors(form.body) }}
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(form.tags) }}
        <div class="input">{% include "LtcTagBundle:Admin:widget.html.twig" %}</div>
    </div>
    <div class="clearfix with_file">
        {{ form_label(form.reference) }}
        <div class="input">
            {{ form_widget(form.reference, {"attr": {"rows": 8}}) }}
            {{ form_errors(form.reference) }}
        </div>
    </div>
    <div class="clearfix with_file">
        {{ form_label(form.relatedPublications) }}
        <div class="input">
            {{ form_widget(form.relatedPublications, {"attr": {"rows": 8}}) }}
            {{ form_errors(form.relatedPublications) }}
        </div>
    </div>
    <div class="clearfix with_file">
        {{ form_label(form.readMore) }}
        <div class="input">
            {{ form_widget(form.readMore, {"attr": {"rows": 8}}) }}
            {{ form_errors(form.readMore) }}
        </div>
    </div>
    {% if form.publicationDate is defined %}
        {{ form_row(form.publicationDate) }}
    {% endif %}
</fieldset>
<fieldset>
    <legend>Invit√© :</legend>
    {{ form_row(form.authorName) }}
    {{ form_row(form.authorBio) }}
</fieldset>
{% endblock %}
