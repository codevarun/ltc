{% extends "LtcCore:Layout:base.html.twig" %}

{% block meta_title_separator %}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset("bundles/ltccore/css/home.css") }}">
{% endblock %}

{% block content %}

<div class="row home_banner_wrap">
    <div class="home_banner">{% render "LtcStory:Story:featured" %}</div>
</div>

<div class="row home_featured">
    <div class="eightcol">
        <span class="title">A propos de...</span>
        {% render "LtcArticle:Article:featured" %}
    </div>
    <div class="fourcol last">
        <span class="title"><a href="{{ path("ltc_blog_entry_index") }}">Table ronde</a></span>
        {% render "LtcBlog:Blog:smallList" with {"numberOfDocs": 5} %}
        <a class="all_others" href="{{ path("ltc_blog_entry_index") }}">&gt; autres articles</a>
    </div>
</div>

<div class="row home_overview">

    {% render "LtcArticle:Category:overview" %}

    <div class="fourcol last">

        <div class="home_tags">
            <span class="title"><a href="{{ path("ltc_tag_cloud") }}">Tags</a></span>
            {% render "LtcTag:Tag:smallCloud" with {"numberOfTags": 20} %}
            <a class="all_others" href="{{ path("ltc_tag_cloud") }}">&gt; autres tags</a>
        </div>

        <span class="title">Ailleurs</span>
        <a href="{{ photo.url }}"><img src="{{ asset(photo.image.path|apply_filter("lantenora")) }}" alt="{{ photo.title}}" /></a>
        <p class="metadata">{{ photo.image.legend }}</p>
        <a class="all_others" href="{{ photo.url }}">&gt; {{ photo.title }}</a>

    </div>
</div>

{% endblock %}
